extends base

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Sign up
            form.form.form--login#signup
                .form__group
                    label.form__label(for='firstname') First Name
                    input#firstname.form__input(type='text', placeholder='John', required)
                .form__group
                    label.form__label(for='lastname') Last Name
                    input#lastname.form__input(type='text', placeholder='Smith', required)
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email', placeholder='you@example.com', required)
                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group
                    button.btn.btn--green Signup
